<?xml version="1.0" encoding="UTF-8"?>
<schema>
    <mongo>

        <!-- General-purpose enumeration storage -->
        <enum>
            <collection>enums</collection>
            <fields>
                <_id/>
                <name/>
                <defaults>
                    <type>hash</type>
                    <notnull>1</notnull>
                </defaults>
                <stores>
                    <type>hash</type>
                </stores>
            </fields>
        </enum>

        <!-- General-purpose job queue -->
        <job>
            <collection>job_queue</collection>
            <created_timestamp/>
            <updated_timestamp/>
            <fields>
                <_id>
                    <type>MongoId</type>
                </_id>
                <task/>
                <job_data>
                    <type>hash</type>
                </job_data>
                <status/>
                <status_message/>
                <pid>
                    <type>int</type>
                </pid>
                <retries>
                    <type>int</type>
                </retries>
                <priority>
                    <type>int</type>
                </priority>
                <execute_at>
                    <type>MongoDate</type>
                </execute_at>
                <error_log>
                    <type>set</type>
                </error_log>
                <other_data>
                    <type>hash</type>
                </other_data>
                <created_at>
                    <type>MongoDate</type>
                </created_at>
                <updated_at>
                    <type>MongoDate</type>
                </updated_at>
            </fields>
        </job>
    </mongo>
</schema>